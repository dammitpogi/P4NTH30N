{
  "name": "librarian-memory",
  "version": "1.0.0",
  "description": "Librarian Memory System for RAG Fallback",
  "type": "module",
  "scripts": {
    "sweep": "bun run sweep.ts",
    "sweep:full": "bun run sweep.ts --full",
    "search": "bun run searcher.ts",
    "validate": "bun run sweep.ts --validate",
    "build": "bun build sweep.ts --compile --outfile ../sweep.exe",
    "decision:index": "bun run decision-status-indexer.ts",
    "manifest:v2:scaffold": "bun run manifest-v2-scaffold.ts",
    "manifest:v2:integrity": "bun run manifest-v2-integrity.ts",
    "governance:lint": "bun run governance-lint.ts",
    "reconsolidation:gate": "bun run reconsolidation-gate.ts"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
