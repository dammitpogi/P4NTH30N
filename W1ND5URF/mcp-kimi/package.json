{
  "name": "windsurf-cartography",
  "displayName": "Windsurf Cartography",
  "description": "Auto-injects codemap.md files into AI context based on Cartography system",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "AI"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:csharp",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "windsurf-cartography.refresh",
        "title": "Refresh Cartography Context",
        "category": "Windsurf Cartography"
      },
      {
        "command": "windsurf-cartography.showCurrent",
        "title": "Show Current Codemap",
        "category": "Windsurf Cartography"
      },
      {
        "command": "windsurf-cartography.toggle",
        "title": "Toggle Auto-Injection",
        "category": "Windsurf Cartography"
      },
      {
        "command": "windsurf-cartography.configureKimi",
        "title": "Configure Kimi BYOK",
        "category": "Windsurf Cartography"
      }
    ],
    "configuration": {
      "title": "Windsurf Cartography",
      "properties": {
        "windsurfCartography.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable automatic codemap injection"
        },
        "windsurfCartography.cartographyPath": {
          "type": "string",
          "default": ".slim/cartography.json",
          "description": "Path to Cartography configuration file"
        },
        "windsurfCartography.maxContextLength": {
          "type": "number",
          "default": 5000,
          "description": "Maximum character length for injected codemap content"
        }
      }
    },
    "statusBar": [
      {
        "id": "windsurf-cartography.status",
        "name": "Windsurf Cartography",
        "text": "$(map) Cartography",
        "tooltip": "Windsurf Cartography Status",
        "command": "windsurf-cartography.showCurrent"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "glob": "^10.3.10"
  }
}
