{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "P4NTH30N": "Debug"
    }
  },
  "AllowedHosts": "*",
  "P4NTH30N": {
    "Database": {
      "ConnectionString": "mongodb://192.168.56.1:27017/P4NTH30N",
