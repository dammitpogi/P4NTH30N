{
  "name": "sftpgo-alma",
  "description": "SFTPGo server for OpenClaw file transfers",
  "image": "drakkan/sftpgo:latest",
  "variables": {
    "SFTPGO_HTTPD__BINDINGS__0__PORT": {
      "value": "8080"
    },
    "SFTPGO_HTTPD__BINDINGS__0__ENABLE_WEB_ADMIN": {
      "value": "true"
    },
    "SFTPGO_HTTPD__BINDINGS__0__ENABLE_WEB_CLIENT": {
      "value": "true"
    },
    "SFTPGO_SFTPD__BINDINGS__0__PORT": {
      "value": "2022"
    },
    "SFTPGO_DATA_PROVIDER__DRIVER": {
      "value": "memory"
    },
    "SFTPGO_DEFAULT_ADMIN_USERNAME": {
      "value": "admin"
    },
    "SFTPGO_DEFAULT_ADMIN_PASSWORD": {
      "value": "alma-admin-2026"
    }
  },
  "volumes": [
    {
      "mountPath": "/srv/sftpgo",
      "size": "10GB"
    }
  ],
  "ports": [
    {
      "port": "2022",
      "protocol": "tcp"
    },
    {
      "port": "8080",
      "protocol": "tcp"
    }
  ]
}
