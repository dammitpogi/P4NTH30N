{
  "protocol": "run_changelog",
  "version": "1.0.0",
  "intent": "Record every run with lineage, decisions, and rollback notes.",
  "location": "Codex/Reports",
  "file_naming": "run_changelog_YYYYMMDD.json",
  "required_fields": [
    "run_id",
    "timestamp_utc",
    "actor",
    "summary",
    "changes",
    "questions",
    "decisions",
    "rollbacks"
  ],
  "change_entry_schema": {
    "path": "string",
    "type": "added|updated|deleted",
    "intent": "string",
    "risk_notes": "string"
  },
  "questions_schema": {
    "id": "string",
    "question": "string",
    "status": "open|answered|deferred"
  },
  "rollbacks_schema": {
    "item": "string",
    "steps": [
      "string"
    ]
  }
}
