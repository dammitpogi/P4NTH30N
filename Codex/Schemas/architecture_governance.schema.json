{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Architecture Governance",
  "type": "object",
  "required": [
    "intent",
    "domain_structure",
    "function_guidance",
    "object_guidance",
    "schema_governance",
    "interface_contracts",
    "migration_rules",
    "documentation_and_provenance"
  ],
  "properties": {
    "intent": {
      "type": "string"
    },
    "domain_structure": {
      "type": "object",
      "required": [
        "preferred_layout",
        "rule",
        "boundaries"
      ],
      "properties": {
        "preferred_layout": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rule": {
          "type": "string"
        },
        "boundaries": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "function_guidance": {
      "type": "object",
      "required": [
        "principles",
        "structure"
      ],
      "properties": {
        "principles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "structure": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "object_guidance": {
      "type": "object",
      "required": [
        "principles",
        "naming"
      ],
      "properties": {
        "principles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "naming": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "schema_governance": {
      "type": "object",
      "required": [
        "rules",
        "evidence"
      ],
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "evidence": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "interface_contracts": {
      "type": "object",
      "required": [
        "principles"
      ],
      "properties": {
        "principles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "migration_rules": {
      "type": "object",
      "required": [
        "requirements"
      ],
      "properties": {
        "requirements": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "documentation_and_provenance": {
      "type": "object",
      "required": [
        "must_record",
        "canon_location"
      ],
      "properties": {
        "must_record": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "canon_location": {
          "type": "string"
        }
      }
    }
  }
}
