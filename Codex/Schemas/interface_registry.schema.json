{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Interface Registry",
  "type": "object",
  "required": [
    "version",
    "intent",
    "interfaces"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "intent": {
      "type": "string"
    },
    "interfaces": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "owner",
          "consumers",
          "contract",
          "inputs",
          "outputs",
          "stability",
          "migration_notes"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          },
          "consumers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "contract": {
            "type": "string"
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "stability": {
            "type": "string"
          },
          "migration_notes": {
            "type": "string"
          },
          "namespace": {
            "type": "string"
          }
        }
      }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
