{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "P4NTH30N": "Debug"
    }
  },
  "AllowedHosts": "*",
  "P4NTH30N": {
    "Database": {
      "ConnectionString": "mongodb://localhost:27017/P4NTH30N",
      "DatabaseName": "P4NTH30N"
    },
    "H0UND": {
      "Polling": {
        "IntervalSeconds": 60,
        "MaxConcurrent": 10,
        "TimeoutSeconds": 30
      },
      "Analytics": {
        "Enabled": true,
        "ForecastWindowHours": 24,
        "MinDataPoints": 3
      }
    },
    "H4ND": {
      "Cdp": {
        "HostIp": "127.0.0.1",
        "Port": 9222,
        "ReconnectRetries": 3,
        "ReconnectBaseDelayMs": 1000,
        "CommandTimeoutMs": 10000,
        "SelectorTimeoutMs": 10000
      },
      "GameSelectors": {
        "Games": {
          "FireKirin": {
            "PageReadyChecks": [
              "document.querySelector('canvas') !== null",
              "document.querySelector('.hall-container, .game-list, [class*=\"hall\"]') !== null",
              "document.querySelectorAll('iframe').length > 0"
            ],
            "LoginPageIndicators": [
              "document.querySelector('.login-btn, .play-btn, input[type=\"password\"], [class*=\"guest\"]') !== null"
            ],
            "JackpotTierExpressions": [
              "Number(window.parent.{tier}) || 0",
              "Number(window.{tier}) || 0",
              "(() => { try { var f = document.querySelector('iframe'); return f ? Number(f.contentWindow.{tier}) || 0 : 0; } catch(e) { return 0; } })()"
            ],
            "PageReadyMaxAttempts": 20,
            "PageReadyDelayMs": 500
          },
          "OrionStars": {
            "PageReadyChecks": [
              "document.querySelector('canvas') !== null",
              "document.querySelector('.hall-container, .home-container, [class*=\"hall\"]') !== null",
              "document.querySelectorAll('iframe').length > 0"
            ],
            "LoginPageIndicators": [
              "document.querySelector('.login-btn, .play-btn, input[type=\"password\"], [class*=\"guest\"]') !== null"
            ],
            "JackpotTierExpressions": [
              "Number(window.parent.{tier}) || 0",
              "Number(window.{tier}) || 0",
              "(() => { try { var f = document.querySelector('iframe'); return f ? Number(f.contentWindow.{tier}) || 0 : 0; } catch(e) { return 0; } })()"
            ],
            "PageReadyMaxAttempts": 20,
            "PageReadyDelayMs": 500
          }
        }
      },
      "Parallel": {
        "WorkerCount": 5,
        "ChannelCapacity": 10,
        "MaxSignalsPerWorker": 100,
        "PollIntervalSeconds": 1.0,
        "ShadowMode": true
      },
      "BurnIn": {
        "DurationHours": 24,
        "MetricsIntervalSeconds": 60,
        "AutoGenerateSignals": true,
        "AutoGenerateCount": 50,
        "RefillThreshold": 5,
        "RefillCount": 20,
        "HaltOnDuplication": true,
        "HaltOnErrorRatePercent": 10,
        "WarnOnMemoryGrowthMB": 100
      },
      "FirstSpin": {
        "MaxBetAmount": 0.10,
        "RequireConfirmation": true,
        "ConfirmationTimeoutSec": 60,
        "SpinTimeoutSec": 30,
        "TargetGame": "FireKirin",
        "MinBalance": 1.00,
        "CaptureScreenshots": true,
        "SaveToMongoDB": true
      },
      "RetryPolicy": {
        "MaxAttempts": 3,
        "BackoffSeconds": 5
      },
      "CdpLifecycle": {
        "AutoStart": true,
        "ChromePath": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
        "Headless": false,
        "DebugPort": 9222,
        "DebugHost": "0.0.0.0",
        "StartupTimeoutSeconds": 30,
        "HealthCheckIntervalSeconds": 30,
        "MaxAutoRestarts": 3,
        "RestartBackoffSeconds": [5, 10, 30],
        "GracefulShutdownTimeoutSeconds": 10,
        "AdditionalArgs": ["--no-sandbox", "--disable-gpu"]
      },
      "BurnInAlerts": {
        "ErrorRateWarnThreshold": 0.05,
        "ErrorRateWarnConsecutiveChecks": 3,
        "ErrorRateCriticalThreshold": 0.10,
        "MemoryGrowthWarnMBPerHour": 50,
        "MemoryCriticalThresholdMB": 500,
        "ChromeRestartWarnCount": 2,
        "ChromeRestartCriticalCount": 5,
        "PlatformResponseWarnMs": 500,
        "SignalBacklogWarnCount": 20,
        "HaltOnDuplication": true,
        "HaltOnWorkerDeadlock": true,
        "WorkerDeadlockMinutes": 10,
        "NotificationChannels": ["Console", "WebSocket", "File"]
      },
      "FourEyes": {
        "Enabled": true,
        "ConfidenceThreshold": 0.80
      }
    },
    "Features": {
      "VectorSearch": false,
      "SignalThrottling": true,
      "AutoRetry": true
    }
  }
}
