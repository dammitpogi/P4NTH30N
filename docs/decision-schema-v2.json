{
  "$schema": "http://json-schema.org/draft-2020-12/schema",
  "$id": "https://p4nth30n.io/decision/v2/schema.json",
  "title": "P4NTH30N Decision Schema v2",
  "description": "Enhanced decision schema with complete plan capture, approval conditions, and implementation specifications",
  "version": "2.0.0",
  "type": "object",
  "required": ["decisionId", "title", "category", "status", "approval"],
  "properties": {
    "decisionId": {
      "type": "string",
      "pattern": "^[A-Z]+-[0-9]+$",
      "description": "Unique decision identifier (e.g., ARCH-003)"
    },
    "title": {
      "type": "string",
      "description": "Human-readable decision title"
    },
    "category": {
      "type": "string",
      "enum": ["Platform-Architecture", "Platform-Integration", "Workflow-Optimization", "Production Hardening", "Technical", "Feature", "Infrastructure"]
    },
    "status": {
      "type": "string",
      "enum": ["Proposed", "InProgress", "Completed", "Rejected"]
    },
    "description": {
      "type": "string",
      "description": "Brief description of the decision purpose"
    },
    
    "approval": {
      "type": "object",
      "required": ["percentage", "level", "oracle"],
      "properties": {
        "percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Oracle approval percentage"
        },
        "level": {
          "type": "string",
          "enum": ["Approved", "Conditional", "Rejected"]
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "oracle": {
          "type": "object",
          "properties": {
            "feasibility": { "type": "number", "minimum": 0, "maximum": 10 },
            "risk": { "type": "number", "minimum": 0, "maximum": 10 },
            "complexity": { "type": "number", "minimum": 0, "maximum": 10 },
            "resources": { "type": "number", "minimum": 0, "maximum": 10 },
            "rationale": { "type": "string" }
          }
        }
      }
    },
    
    "conditions": {
      "type": "object",
      "description": "Approval conditions that must be met",
      "properties": {
        "mustFix": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "description": { "type": "string" },
              "status": { "type": "string", "enum": ["Pending", "Completed", "Waived"] },
              "verification": { "type": "string" }
            }
          }
        },
        "niceToHave": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "description": { "type": "string" },
              "status": { "type": "string", "enum": ["Pending", "Completed", "Waived"] }
            }
          }
        },
        "preValidation": {
          "type": "object",
          "properties": {
            "required": { "type": "boolean" },
            "steps": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "step": { "type": "number" },
                  "description": { "type": "string" },
                  "passCriteria": { "type": "string" },
                  "status": { "type": "string", "enum": ["Pending", "Passed", "Failed"] }
                }
              }
            }
          }
        }
      }
    },
    
    "technicalSpecification": {
      "type": "object",
      "description": "Complete technical implementation details",
      "properties": {
        "architecture": {
          "type": "string",
          "description": "Detailed architecture description"
        },
        "components": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "purpose": { "type": "string" },
              "specifications": { "type": "string" },
              "dependencies": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "model": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "parameters": { "type": "string" },
            "platform": { "type": "string" },
            "quantization": { "type": "string" },
            "size": { "type": "string" }
          }
        },
        "dataFlow": {
          "type": "string",
          "description": "Step-by-step data flow diagram or description"
        },
        "codeExamples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "language": { "type": "string" },
              "description": { "type": "string" },
              "code": { "type": "string" }
            }
          }
        }
      }
    },
    
    "benchmarkRequirements": {
      "type": "object",
      "description": "Benchmark and testing requirements",
      "properties": {
        "required": { "type": "boolean" },
        "testSetSize": { "type": "number" },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "target": { "type": "string" },
              "actual": { "type": "string" },
              "status": { "type": "string", "enum": ["Pending", "Passed", "Failed"] }
            }
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "count": { "type": "number" },
              "description": { "type": "string" }
            }
          }
        }
      }
    },
    
    "implementation": {
      "type": "object",
      "properties": {
        "estimatedEffort": { "type": "string" },
        "phases": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "phase": { "type": "number" },
              "focus": { "type": "string" },
              "timeline": { "type": "string" },
              "deliverables": { "type": "array", "items": { "type": "string" } },
              "dependencies": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "targetFiles": {
          "type": "array",
          "items": { "type": "string" }
        },
        "deliveredFiles": {
          "type": "array",
          "items": { "type": "string" }
        },
        "progress": { "type": "string" }
      }
    },
    
    "fallbackStrategy": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "type": { "type": "string" },
        "description": { "type": "string" },
        "threshold": { "type": "string" }
      }
    },
    
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": { "type": "string" },
          "probability": { "type": "string", "enum": ["Low", "Medium", "High"] },
          "impact": { "type": "string", "enum": ["Low", "Medium", "High"] },
          "mitigation": { "type": "string" }
        }
      }
    },
    
    "revisionHistory": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "version": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "changes": { "type": "string" },
          "approvalDelta": { "type": "number" }
        }
      }
    },
    
    "consultationLog": {
      "type": "array",
      "description": "Complete log of all Oracle/Designer consultations",
      "items": {
        "type": "object",
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "agent": { "type": "string", "enum": ["Oracle", "Designer"] },
          "approvalPercentage": { "type": "number" },
          "keyFindings": { "type": "string" },
          "concerns": { "type": "array", "items": { "type": "string" } },
          "recommendations": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    
    "dependencies": {
      "type": "array",
      "items": { "type": "string" }
    },
    
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}
