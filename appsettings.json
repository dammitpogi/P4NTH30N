{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "P4NTH30N": "Debug"
    }
  },
  "AllowedHosts": "*",
  "P4NTH30N": {
    "Database": {
      "ConnectionString": "mongodb://localhost:27017/P4NTH30N",
      "DatabaseName": "P4NTH30N"
    },
    "H0UND": {
      "Polling": {
        "IntervalSeconds": 60,
        "MaxConcurrent": 10,
        "TimeoutSeconds": 30
      },
      "Analytics": {
        "Enabled": true,
        "ForecastWindowHours": 24,
        "MinDataPoints": 3
      }
    },
    "H4ND": {
      "Selenium": {
        "Headless": false,
        "ImplicitWaitSeconds": 10,
        "PageLoadTimeoutSeconds": 30,
        "ScriptTimeoutSeconds": 30
      },
      "RetryPolicy": {
        "MaxAttempts": 3,
        "BackoffSeconds": 5
      }
    },
    "Features": {
      "VectorSearch": false,
      "SignalThrottling": true,
      "AutoRetry": true
    }
  }
}
